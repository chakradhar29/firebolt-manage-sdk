{
    "openrpc": "1.2.4",
    "info": {
        "title": "HDMI",
        "description": "A module for interacting with HDMI devices",
        "version": "0.0.0"
    },
    "components": {
        "schemas": {
            "HdmiInputList": {
                "title": "HdmiInputList",
                "type": "object",
                "description": "Contains a list of hdmi devices connected to the device.",
                "properties": {
                    "list": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/HdmiInputInfo"
                        }
                    }
                }
            },
            "HdmiInputInfo": {
                "title": "HdmiInputInfo",
                "description": "Properties of HDMI input devices connected.",
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Id of the input."
                    },
                    "locator": {
                        "type": "string",
                        "description": "Locator of the input."
                    },
                    "connected": {
                        "type": "boolean",
                        "description": "Connection status of the device."
                    }
                }
            },
            "Dimensions": {
                "title": "Dimensions",
                "description": "Dimensions the HDMI input should play at.",
                "type": "object",
                "properties": {
                    "x": {
                        "type": "integer",
                        "description": "x position of the input."
                    },
                    "y": {
                        "type": "integer",
                        "description": "y position of the input."
                    },
                    "w": {
                        "type": "integer",
                        "description": "width of the playback"
                    },
                    "h": {
                        "type": "integer",
                        "description": "height of the playback"
                    }
                }
            }
        }
    },
    "methods": [
        {
            "name": "getAvailableInputs",
            "summary": "Get a list of available HDMI inputs.",
            "tags": [
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:hdmi:availableInputs"
                    ]
                }
            ],
            "params": [],
            "result": {
                "name": "list",
                "summary": "List of available HDMI inputs.",
                "schema": {
                    "$ref": "#/components/schemas/HdmiInputList"
                }
            },
            "examples": [
                {
                    "name": "List of available HDMI inputs.",
                    "params": [],
                    "result": {
                        "name": "Available HDMI inputs example",
                        "value": {
                            "HdmiInputList": [
                                {
                                    "id": "0",
                                    "locator": "hdmiin://localhost/deviceid/0",
                                    "connected": "true"
                                },
                                {
                                    "id": "1",
                                    "locator": "hdmiin://localhost/deviceid/1",
                                    "connected": "false"
                                },
                                {
                                    "id": "2",
                                    "locator": "hdmiin://localhost/deviceid/2",
                                    "connected": "false"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "setActiveInput",
            "summary": "Sets the active HDMI input.",
            "tags": [
                {
                    "name": "capabilities",
                    "x-uses": [
                        "xrn:firebolt:capability:hdmi:activeInput"
                    ]
                }
            ],
            "params": [
                {
                    "name": "id",
                    "summary": "The id of the port to connect to",
                    "required": true,
                    "schema": {
                        "type": "string"
                    }
                },
                {
                    "name": "dimensions",
                    "summary": "Defines the dimensions of the playback",
                    "schema": {
                        "$ref": "#/components/schemas/Dimensions"
                    }
                }
            ],
            "result": {
                "name": "connected",
                "schema": {
                    "type": "boolean"
                }
            },
            "examples": [
                {
                    "name": "Set active HDMI input.",
                    "value": {
                        "id": "0",
                        "dimensions": {
                            "x": 0,
                            "y": 0,
                            "w": 1920,
                            "h": 1080
                        }
                    },
                    "result": {
                        "name": "connected",
                        "value": true
                    }
                }
            ]
        }
    ]
}